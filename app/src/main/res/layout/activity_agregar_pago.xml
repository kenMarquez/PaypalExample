<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ken.paypalexample.AgregarPago">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F5F5"
        android:elevation="7dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8">

            <EditText
                android:id="@+id/add_payment_et_card_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="Número de tarjeta de crédito/débito"
                android:inputType="number"
                android:maxLength="19"
                android:maxLines="1"
                android:paddingBottom="15dp"
                android:paddingLeft="40dp"
                android:textSize="15sp"></EditText>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:paddingBottom="5dp"
                android:src="@drawable/uber" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/add_payment_scan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1.5"
            android:padding="6dp"
            android:src="@drawable/scan2" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5">

            <EditText
                android:id="@+id/add_payment_et_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="MM"
                android:inputType="number"
                android:maxEms="2"
                android:maxLength="2"
                android:maxLines="1"
                android:paddingLeft="3dp" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="2.5">

            <EditText
                android:id="@+id/add_payment_et_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="AA"
                android:inputType="number"
                android:maxEms="2"
                android:maxLength="2"
                android:maxLines="1"
                android:paddingLeft="3dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="5">

            <EditText
                android:id="@+id/add_payment_et_cvv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CVV"
                android:inputType="number"
                android:maxEms="2"
                android:maxLines="1"
                android:paddingLeft="3dp" />
        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_add_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/letter_medium"
        android:layout_marginEnd="16sp"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16sp"
        android:background="#000"
        android:padding="15dp"
        android:text="AGREGAR PAGO"
        android:textColor="#fff" />


</LinearLayout>
